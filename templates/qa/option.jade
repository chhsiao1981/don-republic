| {% verbatim %}
#qa-option
  .form
    .form-row
      .form-label 時間範圍
      .form-input
        | 由
        input(type="date")
        | 至
        input(type="date")
    .form-row
      .form-label 議案
      .form-input
        .more-tag: i.icon-chevron-down
        .btn-group(ng-repeat="item in motionList")
          .btn.btn-default
            | {{item.name}}
            i.count ( {{item.count}} )
          .btn.btn-default: i.icon-remove
    .form-row
      .form-label 提案
      .form-input
        .btn-group(ng-repeat="item in proposeList")
          .btn.btn-default
            | {{item.name}}
            i.count ( {{item.count}} )
          .btn.btn-default: i.icon-remove
        .btn.btn-default: i.icon-plus
    .form-row
      .form-label 專案
      .form-input
        .btn-group(ng-repeat="item in projectList")
          .btn.btn-default
            | {{item.name}}
            i.count (  {{item.count}} )
          .btn.btn-default: i.icon-remove
        .btn.btn-default: i.icon-plus
    .form-row
      .form-label 標籤
      .form-input
        a(href="#") 展開分類
        |   
        .btn-group(ng-repeat="item in tagList")
          .btn.btn-default.btn-cat
            | {{item.name}}
            i.count ( {{item.count}} )
          .btn.btn-default.btn-cat: i.icon-remove
        .btn.btn-default: i.icon-plus

    .form-row
      .form-label 公民
      .form-input
        a(href="#") 展開分類
        |   
        .btn-group(ng-repeat="item in citizenList")
          .btn.btn-default.btn-citizen
            | {{item.name}}
          .btn.btn-default.btn-citizen: i.icon-remove
        .btn.btn-default: i.icon-plus
| {% endverbatim %}
